Console.WriteLine("Привет! Я - консольная программа на выполнение базовых математических действий.\n1. Сложение\n2. Вычитание\n3. Умножение\n4. Деление");
int number = Convert.ToInt32(Console.ReadLine());
switch (number)
{
    case 1:
        Console.Write("\nСложение.\nВведи первое слагаемое: ");
        int a = Convert.ToInt32(Console.ReadLine());
        Console.Write("\nВведи второе слагаемое: ");
        int b = Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("Результат сложения: " + (a + b));
        break;
    case 2:
        Console.Write("\nВычитание.\nВведи уменьшаемое: ");
        int c = Convert.ToInt32(Console.ReadLine());
        Console.Write("\nВведи вычитаемое: ");
        int d = Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("Результат вычитания: " + (c - d));
        break;
    case 3:
        Console.Write("\nУмножение.\nВводи первый множитель: ");
        int e = Convert.ToInt32(Console.ReadLine());
        Console.Write("\nУмножение.\nВводи второй множитель: ");
        int f = Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("Результат умножения: " + (e * f));
        break;
    case 4:
        Console.Write("\nУмножение.\nВводи делимое: ");
        int g = Convert.ToInt32(Console.ReadLine());
        Console.Write("\nУмножение.\nВводи делитель: ");
        int h = Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("Результат деления: " + (g / h));
        break;
    default:
        Console.WriteLine("Операция не определена!");
        break;
}
Console.WriteLine("Желаю доброго дня и хорошего настроения!");
Console.ReadKey();
