Console.WriteLine("Привет! Я - консольная программа, которая поможет тебе в умножении чисел исключительно в диапазоне от нуля до десяти.");
while (true)
{
    Console.Write("\nВводи первое число: ");
    double a = Convert.ToDouble(Console.ReadLine());
    Console.Write("\nВводи второе число: ");
    double b = Convert.ToDouble(Console.ReadLine());
    if (a > 0 && b < 10 && b > 0 && a < 10)
    {
        Console.WriteLine($"{a} * {b} = {a * b}");
        break;
    }
    else { Console.WriteLine("\nЧисла должны быть в диапазоне от 0 до 10."); }
}
Console.ReadKey();
