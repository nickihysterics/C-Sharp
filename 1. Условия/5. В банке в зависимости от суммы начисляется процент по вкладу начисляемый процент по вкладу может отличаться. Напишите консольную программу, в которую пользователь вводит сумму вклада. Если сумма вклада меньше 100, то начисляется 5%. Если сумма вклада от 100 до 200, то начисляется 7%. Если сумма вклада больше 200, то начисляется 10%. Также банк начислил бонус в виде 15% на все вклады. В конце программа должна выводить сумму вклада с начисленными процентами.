Console.WriteLine("Привет! Я - консольная программа, которая поможет тебе рассчитать процент по вкладу. \nВводи число, которое планируешь положить на вклад:");
double a = Convert.ToDouble(Console.ReadLine());
double b;
double c;
double d;
if (a <= 99) { b = a + a / 100 * 5; c = b + b / 100 * 15; d = c - a; ; Console.WriteLine("Выручка по вашему вкладу составит: " + d + "Р, а общая сумма вклада составит: " + c + "Р."); }
else if (a >= 100 && a <= 199) { b = a + a / 100 * 7; c = b + b / 100 * 15; d = c - a; ; Console.WriteLine("Выручка по вашему вкладу составит: " + d + "Р, а общая сумма вклада составит: " + c + "Р."); }
else if (a >= 200) { b = a + a / 100 * 10; c = b + b / 100 * 15; d = c - a; ; Console.WriteLine("Выручка по вашему вкладу составит: " + d + "Р, а общая сумма вклада составит: " + c + "Р."); }
else if (a <= 0) { Console.WriteLine("Допущена ошибка в написании суммы. Введите число больше нуля."); }
else { Console.WriteLine("Допущена ошибка в написании суммы. Перезапустите программу и введите число."); }
Console.WriteLine("Желаю хорошего дня!");
Console.ReadLine();
